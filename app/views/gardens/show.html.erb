<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @garden.banner_url %>');">
  <%= @garden.name %>
</div>

<div class="cards mx-3 my-3">
  <%  @plants.each do |plant| %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>');">
  <%= plant.name %>
  <%= link_to "+", plant_path(plant), data: { turbo_method: :delete, turbo_confirm: "You SUREEEEEE!!!???"}, class: "card-remove-link" %>
</div>

  <% end %>

</div>

<h4>Add a plant</h4>

<%= simple_form_for [@garden, @plant] do |f| %>
  <%= f.input :name, placeholder: "Palm tree" %>
  <%= f.input :image_url, placeholder: "Type your URL here" %>

  <%= f.submit "Add", class: "btn btn-primary" %>
<% end %>
